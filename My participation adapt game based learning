import java.util.Scanner;

public class ParticipationAdaptGame {
    
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("Welcome to the Participation Adaptive Game-Based Learning System!");
        
        System.out.printIn("Enter your name: ");
        String playerName = scanner.nextLine();
        
        System.out.printIn("Enter your age: ");
        int playerAge = scanner.nextInt();
        
        if(playerAge < 18) {
            System.out.println("Sorry, you must be at least 18 years old to participate in this game.");
        } else {
            System.out.println("Welcome, " + playerName + "! Let's start the game.");
            
            // Game logic goes here
            
            System.out.println("Congratulations, you have completed the game!");
        }
        
        scanner.close();
      }
  }
}

